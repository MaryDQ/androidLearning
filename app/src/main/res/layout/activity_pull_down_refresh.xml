<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.PullDownRefreshActivity">

    <com.mlx.administrator.myapplication.widget.PullDownRefreshLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

        <com.mlx.administrator.myapplication.widget.PullDownScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                <View
                        android:background="#f00"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"/>
                <View
                        android:background="#ff0"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"/>
                <View
                        android:background="#0f0"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"/>


            </LinearLayout>



        </com.mlx.administrator.myapplication.widget.PullDownScrollView>

    </com.mlx.administrator.myapplication.widget.PullDownRefreshLayout>

    <include layout="@layout/title_drag"/>

</androidx.constraintlayout.widget.ConstraintLayout>